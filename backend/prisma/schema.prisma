generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
}

enum Role {
  USER
  ADMIN
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String        @unique
  password     String
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  role         Role          @default(USER)
  categories   Category[]
  transactions Transaction[]
}

model Category {
  id           String        @id @default(uuid())
  title        String
  description  String?
  icon         String?
  color        String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  transactions Transaction[]

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum TYPE {
  INCOME
  EXPENSE
}

model Transaction {
  id          String   @id @default(uuid())
  description String
  amount      Float
  type        TYPE
  date        DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  categoryId String
  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
}
